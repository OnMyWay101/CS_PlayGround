<Window x:Class="slide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slide"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" MouseMove="StackPanel_TouchMove" MouseUp="StackPanel_TouchLeave" 
                    Height="100" Orientation="Horizontal" Width="600">
            <Border Name="lb" Width="0" Background="#00cd66" >
                <TextBlock Text="&#xe652;" FontFamily="/#iconfont" Foreground="White" HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="40" />
            </Border>
            <Button Name="element" BorderThickness="0" Content="滑动方块" FontSize="22" Width="600" />
            <Border Name="rb" Width="0" Background="#ff4500" >
                <TextBlock Text="&#xe52c;" FontFamily="/#iconfont" Foreground="White" HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="40" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
